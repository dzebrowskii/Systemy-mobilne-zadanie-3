<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:ignore="ExtraText">

    <!-- CheckBox po lewej stronie od nazwy zadania -->
    <CheckBox
        android:id="@+id/task_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Pole tekstowe wyświetlające nazwę zadania -->
    <TextView
        android:id="@+id/task_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Nazwa zadania" />

    <!-- Pole tekstowe wyświetlające datę zadania -->
    <TextView
        android:id="@+id/task_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data zadania"
        android:layout_marginEnd="8dp"
        android:textSize="14sp" />

    <!-- Dodana kontrolka ImageView dla ikony kategorii zadania -->
    <ImageView
        android:id="@+id/category_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_house"
        tools:srcCompat="@drawable/ic_house" />  <!-- Na początku ustaw przykładową ikonę -->
    android:layout_gravity="center_vertical" />
</LinearLayout>
