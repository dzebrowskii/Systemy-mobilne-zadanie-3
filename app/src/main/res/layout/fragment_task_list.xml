<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing_medium"
    android:background="@color/colorBackground">

    <!-- Dodajemy tytuł dla listy zadań -->
    <TextView
        android:id="@+id/task_list_title"
        style="@style/TextFieldsStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/task_list_title"
    android:layout_gravity="center_horizontal"
    android:paddingBottom="@dimen/spacing_small" />

    <!-- RecyclerView do wyświetlania zadań -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/task_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="@dimen/spacing_small"
        android:paddingBottom="@dimen/spacing_small" /> <!-- Zastosowanie odstępów z dimens.xml -->

</LinearLayout>
